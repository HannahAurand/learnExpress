{{!-- parse in the action to the corresponding web page --}}
<form action="/controllers/{{this.id}}?_method=put" method="POST"> 
<p>
    <label for="title">Title: </label>
    {{!-- {{title}} displays the current title in the bar, can be updated if need be, so you are not putting in a blank field --}}
    <input type="text" value="{{title}}" name="title">   
</p>
<p>
    <label for="url">url: </label>
    <input type="text" value="{{url}}" name="url">
</p>
<p>
    <label for="description">Description: </label>
    <input type="text" value="{{description}}" name="description">
</p>
<p>
    <label for="date">Date: </label>
    <input type="text" value="{{date}}" name="date">
</p>
<p>
    <label for="comments">Comments: </label>
    <input type="text" value="{{comments}}" name="comments">
</p>
<input type="submit" value="Update">
</form>